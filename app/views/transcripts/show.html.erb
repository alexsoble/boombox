<div id="outer-video-box" class="video-container" style="margin-left: 120px;">
  <div id="title-box"><h3 style="margin-top: 20px; color:white;"><%= @video.title %></h3></div>
  <div id="watch-again"></div>
  <div id="new-video-box"></div>
  <div id="timer-box"></div>
  <div id="settings" style="height: 100px;">
    <div style="margin-top: 15px; position: absolute; left: 22px;">
      <% if @star.present? %>
        <span class="big-friendly"><i class="icon icon-star star" id="star-full" data-star-id=<%= @star.id %>></i></span>
      <% else %>
        <span class="big-friendly"><i class="icon icon-star-empty star" id="star-empty"></i></span>
      <% end %>
      <span id='star-count' class="friendly-big"><%= @transcript.stars.length %></span>
      &nbsp; <span id='star-notice-area' class="notice"></span>
    </div>
    <div style="margin-top: 15px; margin-left: 22px;">
      <div class='btn btn-info btn-small btn-tiny rounded tight-pack' id='play-pause' style="position: absolute; top: 13px; right: 22px;"> 
        <i class='icon-pause'></i> 
      </div>
      <div class='btn btn-info btn-small btn-tiny rounded tight-pack' id='volume' style="position: absolute; top: 13px; right: 62px;">
        <div id='volume-slider'> </div>
        <i class='icon-volume-up'></i> 
      </div>
    </div>
    <br>
  </div>
</div>
<div id="social-content-area" class="content-area">
  <div class="big tab solo" id="all-content">
    <% if current_user %>
      <% if current_user.id == @transcript.user.id %>
        Your transcript
        <br>
        <span id="saved-status"></span>
      <% else %>
        <%= @user.username %>'s transcript
      <% end %>
    <% else %>
      <%= @user.username %>'s transcript
    <% end %>
  </div>
  <div class="small-tab short"></div>

  <div id="navigation-sidebar">
    <div class="back-to-video sidebar-option">
      <i class="icon icon-globe"></i>
      Main page
    </div>
    <% @translations.each do |tr| %>
      <% user = tr.user.username %>
      <div class="sidebar-option">
        <i class="icon icon-file"></i>
        <%= link_to "Translation by #{user}", translation_url(tr) %>
      </div>
    <% end %>
    <% if current_user %>
      <% if current_user.id == @transcript.user.id %>
        <div class="edit-lines sidebar-option">
          <i class="icon icon-pencil"></i>
          Edit
        </div>
        <div class="remove-transcript-dialog sidebar-option">
          <i class="icon icon-remove"></i>
          Delete
        </div>
        <div class="open-embed-dialog sidebar-option">
          <i class="icon icon-share"></i>
          Embed
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="community-notes">
    <div id='transcript-lines'>
      <% n = 0 %>
      <% @transcript.lines.order("time ASC").order("created_at ASC").each do |l| %>
        <div class="transcript-line <% if current_user %><% if current_user.id == @user.id %>editable-line<% end %><% end %> rounded" data-line-id=<%= l.id %> data-time=<%= l.time %> data-line-order=<%= n %>>
            <% n += 1 %>
            <span class="lang1" data-line-id=<%= l.id %>><%= l.lang1 %></span>
            <span class="line-comment-area" data-line-id=<%= l.id %>></span>
            <span class="line-timing tiny gray" data-line-id=<%= l.id %> data-time=<%= if l.time.present? then l.time end %>>
              <% if l.time.present? %>
                <%= l.formatted_time %>
              <% end %>
            </span>
            <% if l.comments.present? %>
              <% l.comments.each do |c| %>
                <div class="line-comment rounded" data-line-id=<%= l.id %> data-comment-id=<%= c.id %>>
                  <span class="comment-text" data-comment-id=<%= c.id %>><%= c.comment_text %></span>
                  <% if current_user %>
                    <% if current_user.id == @user.id %>
                      <span class="edit-comment quiet" data-comment-id=<%= c.id %>><i class="icon icon-pencil blue-link"></i></span>
                      <span class="remove-comment quiet" data-comment-id=<%= c.id %>><i class="icon icon-remove blue-link"></i></span>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
           <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% if current_user %>
  <% if current_user.id == @user.id %>
    <div id="dialog-editing-tools" title="Editing Tools">
      <span id="editing-instructions" style="text-align: center;">Select the editing tool you'd like to use...</span>
      <br><br>
      <div style='float:left; margin-left: 60px;'>
        <div id='editing-lines' class='btn btn-info rounded editing-category width-120' data-active='Editing' data-inactive='Edit'>
          <i class='icon icon-pencil'></i>
          <span class='status'>Edit</span>
        </div>
        <br><br>
        <div id='adding-lines' class='btn btn-info rounded editing-category width-120' data-active='Adding' data-inactive='Add'>
          <i class='icon icon-plus-sign'></i>
          <span class='status'>Add</span>
        </div>
        <br><br>
        <div id='removing-lines' class='btn btn-info rounded editing-category width-120' data-active='Removing' data-inactive='Remove'>
          <i class='icon icon-remove'></i>
          <span class='status'>Remove</span>
        </div>
        <br><br>
        <div id='timing-lines' class='btn btn-info rounded editing-category width-120' data-active='Timing' data-inactive='Time'>
          <i class='icon icon-time'></i>
          <span class='status'>Time</span>
        </div>
      </div>
      <div style='float:right; margin-right: 60px;'>
        <div id='commenting-lines' class='btn btn-info rounded editing-category width-120' data-active='Commenting' data-inactive='Comment'>
          <i class='icon icon-comment'></i>
          <span class='status'>Comment</span>
        </div>
        <br><br>
        <div id='reordering-lines' class='btn btn-info rounded editing-category width-120' data-active='Reordering' data-inactive='Reorder'>
          <i class='icon icon-reorder'></i>
          <span class='status'>Reorder</span>
        </div>
        <br><br>
        <div id='copying-lines' class='btn btn-info rounded editing-category width-120' data-active='Copy-pasting' data-inactive='Copy-paste'>
          <i class='icon icon-copy'></i>
          <span class='status'>Copy-paste</span>
        </div>
        <br><br>
        <div id='slicing-lines' class='btn btn-info rounded editing-category width-120' data-active='Slicing' data-inactive='Slice'>
          <i class='icon icon-cut'></i>
          <span class='status'>Slice</span>
        </div>
      </div>
      <br><br><br>
    </div>
  <% end %>
<% end %>

<div id="dialog-confirm-remove-line" title="Confirmation">
  <p><span class="ui-icon ui-icon-alert"></span>Sure you want to delete this line?</span></p>
</div>

<div id="dialog-confirm-remove-comment" title="Confirmation">
  <p><span class="ui-icon ui-icon-alert"></span>Sure you want to delete this comment?</span></p>
</div>

<div id="dialog-confirm-remove-transcript" title="Confirmation">
  <p><span class="ui-icon ui-icon-alert"></span>Are you super sure you want to delete this transcript?</span></p>
</div>

<div id="dialog-embed" title="Embed your transcript">
  <p>
    Copy and paste into the HTML editing section of your blog or website:
    <br><br>
    <div id='embed-code' style='background-color: white; padding: 5px;'>
      <%= "<div id='heyu-area'><div id='new-video-box'></div></div>" %>
      <br>
      <%= '<script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>' %>
      <br>
      <%= '<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>' %>
      <br>
      <%= '<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/1.4.6/jquery.scrollTo.min.js"></script>' %>
      <br>
      <%= "<script src='https://heyu-staging.herokuapp.com/transcripts/#{@transcript.id}/embed.js'></script>" %>
      <br>
      <%= '<link href="https://heyu-staging.herokuapp.com/embed_styling" rel="stylesheet">' %>
    </div>
   </p>
</div>

<div id="data" class="quiet"
 data-youtube-id='<%= @video.youtube_id %>'
 data-title='<%= @video.title %>'
 data-video-id=<%= @video.id %>
 data-transcript-id=<%= @transcript.id %>
 data-interpretation-id=<%= @transcript.interpretation.id %>
 data-number-of-lines-init=<%= @transcript.lines.length %>
 <% if current_user %>
 data-user-id-match=<%= if current_user.id == @user.id then true else false end %>
 <% end %>
 >
</div>