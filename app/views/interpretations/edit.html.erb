<br>
<div id="title-box" class="centerbox very-wide-box"><h2><%= @video.title %></h2></div>

<div class="row-fluid">

  <div class="span5">

    <div id="outer-video-box" class="video-container">
      <div class="lyrics-box small" id="lyrics">
        <div class="small-lyrics-container lang1"></div>
        <div class="small-lyrics-container lang2"></div>
      </div>
      <div id="new-video-box"></div>
      <div id="timer-box"></div>
      <div id="settings"></div>
    </div>

  </div> 

  <div class="span5 offset2">

    <% if @lang1_and_lang2 %>

      <div class="span5 offset2">

        <div class="lyrics-container wide" id="lyrics-box">
          <% @lines.each do |l| %>
            <div class="line" data-time=<%= l.time %> data-duration=<%= l.duration %>>
              <% if l.lang1.present? %>
                <div class="lyrics-container">
                  <p><%= l.lang1 %></p>
                </div>
              <% end %>
              <% if l.lang2.present? %> 
                <div class="lyrics-container">
                  <p><%= l.lang2 %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="lyrics-container wide">
          <div class="lyrics-container">
            <div id="lang1-input">
              <i class='left'><%= @lang1 %>&nbsp;</i>
              <small class='left'>(<small class='current-loop-time'></small>)</small></div>
              <br>
              <div class='control-group'>
              <div class='controls'>
                <input type='text' class='input-xlarge lang1-line'>
              </div>
            </div>
          </div>
          <div class="lyrics-container">
            <div id="lang2-input">
              <i class='left'><%= @lang2 %>&nbsp;</i>
              <small class='left'>(<small id='current-loop-time' class='current-loop-time'></small>)</small></div>
              <br>
              <div class='controls'>
                <input type='text' class='input-xlarge lang2-line'>
              </div>
            <div class="publish-button" style="float: left;"></div>
            <div class="preview-button" style="float: left; margin-left: 20px;"></div>
          </div>
        </div>
      </div>

    <% else %>
    
    <div class="span3">
      <div class="lyrics-container">
        <div id="lang2-box">
          <div id="lang2-lyrics"></div>
          <div id="lang2-input"></div>
        </div>
      </div>
      <div class="lyrics-container">
        <div class="publish-button"></div>
        <div class="preview-button"></div>
      </div>
    </div>
    <% end %>

  </div>

</div>

<div id="data" class="quiet" data-youtube-id=<%= @video.youtube_id %> data-interp-id=<%= @interp.id %> data-lang-one=<%= @video.lang1 %> data-lang-two=<%= @interp.lang2 %> data-translation-type=<%= if @lang1_and_lang2 then 'lang1_and_lang2' else 'just_lang2' end %> data-action-name=<%= action_name %> data-published=<%= @published %>></div>
