<br>
<div id="title-box" class="centerbox very-wide-box"><h2><%= @video.title %></h2></div>

<div class="row-fluid">

  <div class="span5">

    <div id="outer-video-box" class="video-container">
      <div class="lyrics-box small"></div>
      <div id="new-video-box"></div>
      <div id="timer-box"></div>
      <div id="slider"></div>
      <div id="loop-settings">
        <div class='btn-group' id='loop-settings'>
          <br>
          <a class='btn btn-warning rounded' id='playing-in-loops'><i>Playing video in loops</i></a>
          <a class='btn btn-info rounded' id='loop-2'>2s</a>
          <a class='btn btn-warning rounded' id='loop-4'>4s</a>
          <a class='btn btn-info rounded' id='loop-8'>8s</i></a>
        </div>
      </div>
    </div>

    <div id="select-language-box">
      <div class="text-padding">
        <div id="translation-language-dropdown"></div>
      </div>
    </div>

  </div> 

  <div class="span7">
    
    <div id="controls"></div></div>

    <div class="row-fluid">

      <% if @lang1_and_lang2 %>

        <div class="span3">
          <div class="lyrics-container">
            <div id="lang1-box">    
              <div id="lang1-lyrics">
                <% @lines.each do |l| %>
                  <% if l.lang1.present? %>
                    <% if l.time < 60 %>
                      <div class="edit-line" id="<%= l.id %>"><p><small><small>(00:<%= l.time %>)</small></small> <%= l.lang1 %></p></div>
                    <% else %>
                      <div class="edit-line" id="<%= l.id %>"><p><small><small>(<%= l.time / 60 %>:<%= l.time % 60%>)</small></small> <%= l.lang1 %></p></div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
              <div id="lang1-input">
                <div><i class='left'><%= @lang1 %>&nbsp;</i>
                  <small class='left'>(<small class='current-loop-time'></small>)</small></div>
                  <br>
                  <div class='control-group'>
                  <div class='controls'>
                    <input type='text' class='input-xlarge lang1-line'>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="span3">
          <div class="lyrics-container">
            <div id="lang2-box">
              <div id="lang2-lyrics">
                <% @lines.each do |l| %>
                  <% if l.lang2.present? %> 
                    <div class="edit-line" id="<%= l.id %>"><p><%= l.lang2 %></p></div>
                  <% end %>
                <% end %>
              </div>
              <div id="lang2-input">
                <div>
                  <i class='left'><%= @lang2 %>&nbsp;</i>
                  <small class='left'>(<small id='current-loop-time' class='current-loop-time'></small>)</small></div>
                  <br>
                  <div class='controls'>
                    <input type='text' class='input-xlarge lang2-line'>
                </div>
              </div>
            </div>
          </div>
          <div class="lyrics-container">
            <div class="done-button" style="float: left;"></div>
            <div class="save-button" style="float: left; margin-left: 20px;"></div>
          </div>
        </div>

      <% else %>
      
      <div class="span3">
        <div class="lyrics-container">
          <div id="lang2-box">
            <div id="lang2-lyrics"></div>
            <div id="lang2-input"></div>
          </div>
        </div>
        <div class="lyrics-container">
          <div class="done-button" style="float: left;"></div>
          <div class="save-button" style="float: left; margin-left: 20px;"></div>
        </div>
      </div>
      <% end %>

    </div>

  </div>

</div>

<div id="youtube-id" class="quiet"><%= @video.youtube_id %></div>
<div id="interp-id" class="quiet"><%= @interp.id %></div>
<div id="lang1" class="quiet"><%= @video.lang1 %></div>
<div id="lang2" class="quiet"><%= @interp.lang2 %></div>
<div id="translation-type" class="quiet"><%= if @lang1_and_lang2 then 'lang1_and_lang2' else 'just_lang2' end %></div>
