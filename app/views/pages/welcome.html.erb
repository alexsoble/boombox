<div class="wide-centerbox center">
  <br>
  <% if current_user %>
    <% if current_user.firstname %>
      <h1>Welcome <%= current_user.firstname %></h1>
    <% else %>
      <h1>Welcome, <%= current_user.username %>!</h1>
    <% end %>
    <br>
  <% else %>
    <h2 style='text-align: center; font-size: 44px;'><strong>Music + Video + Language Learning</strong></h2>
    <br>
  <% end %>
  <br>
  <br>
</div>
<div class="index-button" id="new-translation-button">
  <br>
  <p class="index-button-text">
    Turn any song or video into a <br> language-learning opportunity. <br><br> Start by searching YouTube:
  </p>
  <div class="controls" style="position: absolute;">
    <input type="text" id="ask-youtube" class="short-text-box new-video-input" style="position: relative; left: 130px; top: 20px;"><%= image_tag "youtube-logo.png", :size => '71x71', :style => 'position: relative; left: 130px; top: 15px;' %>
    <input type="hidden" id="youtube_id">
    <div id="progress-bar"></div>
  </div>
</div>
<div id="results-box"></div>
<br>
<br>
<div class="row" id="featured-videos">
  <div class="offset1">
    <h2> Featured videos: </h2>

      <hr id="hr">

      <%  @featured_videos.each do |i| %>
        <% v = i.video %>
          <div class="video-thumb-box frontpage-thumb-box featured-video-box <%= v.lang1 %>" title="<%= v.title %> // <%= v.lang1 %> // translation into <%= i.lang2 %>" data-interp-id=<%= i.id %>>
            <div class="btn btn-info btn-small btn-tiny rounded" style="text-align: center; margin-bottom: 10px; width: 100px !important; position: absolute; left: 15px;"> <%= v.lang1 %> &rarr; <%= i.lang2 %> </div>
            <br><br>
            <strong class="center" style="color: #2793E6;"><%= "#{v.title.slice(0,25)}" %></strong>
            <br>
            <div class="image-box">
              <%= image_tag "http://img.youtube.com/vi/#{v.youtube_id}/1.jpg" %>
            </div>
          </div>
      <% end %>

  </div>
</div>

<div class="row">

  <div class="offset1">

    <span>

      <h2> Show me videos in... &nbsp;

      <div class="btn-group">
        <div class="btn btn-info rounded dropdown-toggle" data-toggle="dropdown"> (select language) </div>
        <ul class="dropdown-menu">
          <% @langs_with_some_content.each do |l| %>
            <li><a class="language-selector" id="<%= l %>"><%= l %></a></li>
          <% end %>
          <li><a class="language-selector" id="featured">Featured</a></li>
          <li><a class="language-selector" id="all">All</a></li>
        </ul>
      </div>

    </h2>

    </span>
    <hr id="hr">

    <%  @interps_with_some_content.each do |i| %>
      <% v = i.video %>
      <div class="video-thumb-box frontpage-thumb-box <%= v.lang1 %>" title="<%= v.title %>" data-interp-id=<%= i.id %>>
        <strong class="center" style="color: #2793E6;"><%= "#{v.title.slice(0,25)}" %></strong>
        <br>
        <div class="image-box">
          <%= image_tag "http://img.youtube.com/vi/#{v.youtube_id}/1.jpg" %>
        </div>
      </div>
    <% end %>

  </div>

</div>

</div>
<br>
<br>
<br>
<div id="data" class="quiet" data-edit-video-languages="<%= @interp.present? %>" <% if @interp.present? %>data-youtube-id='<%= @youtube_id %>' data-title='<%= @title %>'<% end %>>