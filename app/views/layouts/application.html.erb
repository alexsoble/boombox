<!DOCTYPE html>
<html>
<head>
  <title>( Heyu )</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap.min.css" %>
  <%= javascript_include_tag "coffee/video_#{action_name}" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse">
  <div class="navbar-inner" style="background-color: #9B59BB;">
    <div class="container" style="width: auto;">
      <a class="brand" href="/welcome">( Heyu )</a>
      <% if controller_name == 'videos' && action_name == 'index' %>
        <ul class="nav" id="main-menu-left">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">Give me videos in...</a>
            <ul class="dropdown-menu">
              <%= render 'videos/language_dropdown_options' %>
            </ul>
          </li>
        </ul>
      <% end %>
      <% if current_user %>
        <ul class="nav pull-right signed-in-user" id="<%= current_user.id %>">
          <li><%= link_to "Signed in as #{current_user.name}", '/sign_in' %></li>
          <li><%= link_to "Sign out", "/sign_out" %></li>
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Sign in", '/sign_in' %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% unless flash.empty? %> 
  <div class="row">
    <div class="span11 offset1">
      <div class="alert alert-success" style="background-color: yellow; color: black;">
        <%= notice %>
      </div>
    </div>
  </div>
<% end %>

<%= yield %>
