<!DOCTYPE html>
<html>
<head>
  <title>( Heyu )</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap.min.css" %>
  <% if controller_name == "interpretations" && action_name == "show" %>
    <%= javascript_include_tag "coffee/videos_#{action_name}" %>
  <% elsif controller_name == "interpretations" && action_name == "edit" %>
    <%= javascript_include_tag "coffee/videos_new" %>
  <% else %>
    <%= javascript_include_tag "coffee/#{controller_name}_#{action_name}" %>
  <% end %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner" style="background-color: #9B59BB;">
    <div class="container" style="width: auto;">
      <a class="brand" href="/welcome"><i class="icon-music"></i>  Heyu <i class="icon-music"></i></a>
      <ul class="nav" id="main-menu-left">
        <li><a href="/philosophy">Philosophy</a></li>
      </ul>
      <% if current_user %>
        <ul class="nav pull-right signed-in-user" id="<%= current_user.id %>">
          <li><%= link_to "My translations", user_url(current_user) %></li>
          <li><%= link_to "Sign out", "/sign_out" %></li>
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Sign in", '/sign_in' %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<% unless flash.empty? %> 
  <div class="row">
    <div class="span11 offset1">
      <div class="alert alert-success" style="background-color: yellow; color: black;">
        <%= notice %>
      </div>
    </div>
  </div>
<% end %>

<%= yield %>

<%= content_tag "div", id: "user-id", data: { user: if current_user then current_user.id else 'logged-out' end } do %>
<% end %>

</body>
</html>
