<%= content_tag "div", id: "video-id", data: { youtube_id: @video.youtube_id } do %>
<% end %>

<div class="video-box centerbox"><div id="show-video-box"></div></div>

<% if @lines.present? %>

  <div class="lyrics-box centerbox" id="lyrics">

  <% @lines.each do |l| %>

    <div class="narrow-lyrics-container lang1" id="line-<%= l.time %>">
      <div class="text-container">
        <p class="lyrics"><%= l.lang1 %></p>
      </div>
    </div>

    <div class="narrow-lyrics-container lang2" id="line-<%= l.time %>-b">
      <div class="text-container">
        <p class="lyrics"><%= l.lang2 %></p>
      </div>
    </div>

  <!--

    <div class="button-container">
      <i class="icon-thumbs-up"></i><i class="icon-thumbs-down"></i><i class="icon-comment-alt"></i>
    </div>

  -->

  <% end %>

  </div>

  <div class="centerbox visible">
  <div class="btn-group">
    <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog icon"></i></a></span></a>
    <ul class="dropdown-menu">
      <li><a id="just-lang2">Show just <%= @interpretation.lang2 %></a></li>
      <li><a id="lang1-and-lang2">Show <%= @video.lang1 %> and <%= @interpretation.lang2 %></a></li>
      <li><a id="just-lang1">Show just <%= @video.lang1 %></a></li>
    </ul>
  </div>
  </div>

  <% else %>

  <div class="centerbox" style="text-align: center;"><h3>Nobody's translated this song yet. <%= link_to "Want to give it a try?", "/videos/new" %></h3></div>

<% end %>