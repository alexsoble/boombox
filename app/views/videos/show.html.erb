<%= content_tag "div", id: "video-id", data: { youtube_id: @video.youtube_id } do %>
<% end %>

<div class="show-video-box centerbox">
  <div id="show-video-box"></div>
    <% if @lines.present? %>
      <div class="lyrics-box centerbox" id="lyrics">
        <% if @lines_have_lang1 %>    
          <% @lines.each do |l| %>
            <div class="narrow-lyrics-container lang1">
              <div class="text-container">
                <strong><i><h2 class="lyrics"><%= l.lang1 %></h2></i></strong>
              </div>
            </div>
            <div class="narrow-lyrics-container lang2" id="line-<%= l.time %>">
              <div class="text-container">
                <strong><i><h2 class="lyrics"><%= l.lang2 %></h2></i></strong>
              </div>
            </div>
          <% end %>
      <% else %>
        <% @lines.each do |l| %>
          <div class="wide-lyrics-container lang2" id="line-<%= l.time %>">
            <div class="text-container">
              <p class="lyrics"><%= l.lang2 %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if @lines_have_lang1 %>
    <div class="centerbox visible">
      <div class="btn-group">
        <a class="btn btn-info dropdown-toggle" data-toggle="dropdown"><i class="icon-cog icon icon-2x"></i></a></span></a>
        <ul class="dropdown-menu">
          <li><a id="just-lang2">Show just <%= @interpretation.lang2 %></a></li>
          <li><a id="lang1-and-lang2">Show <%= @video.lang1 %> and <%= @interpretation.lang2 %></a></li>
          <li><a id="just-lang1">Show just <%= @video.lang1 %></a></li>
        </ul>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="centerbox" style="text-align: center;"><h3>Nobody's translated this song yet. <%= link_to "Want to give it a try?", "/videos/new" %></h3></div>
<% end %>